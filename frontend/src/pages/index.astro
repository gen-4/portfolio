<style is:global>
	:root {
		--black: #29353C;
		--white: #E6E6E6;
		--dark-blue: #44576D;
		--green-blue: #768A96;
		--light-blue: #AAC7D8;
		--lighter-blue: #DFEBF6;
		--alpha-dark-blue: rgba(68, 87, 109, 0.8);

		--text-white: var(--white);
		--text-black: var(--black);
		--transparent-bg: var(--alpha-dark-blue);
	}

	.title-font {
		font-family: "Rowdies", sans-serif;
		font-weight: 400;
		font-style: normal;
	}

	.body-font {
		font-family: "Merienda", cursive;
		font-weight: 400;
		font-style: normal;
	}	

	body * {
		margin: 0;
	}

	html, body {
		width: 100vw;
		min-height: 100%;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		padding-bottom: 2rem !important;
		color: var(--text-white);
		background-image: url("/background.png");
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
	}

	*,
	*::before,
	*::after {
		box-sizing: inherit;
	}

	.projects-container {
		width: 100%;
		padding: 0 20%;
		margin-top: 4rem;
	}

	a {
		text-decoration: none;
		color: var(--text-black);
	}


	@media (max-width: 600px) {
		body {
			background-position: right;
			font-size: .8rem;
		}

		.projects-container {
			padding: 0 5%;
		}
	}
</style>

