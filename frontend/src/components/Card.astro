---
import { Image } from 'astro:assets';
import testImage from '../assets/test_img.jpg';
---







<div class="card">
	<Image src={ testImage } alt="test image" />
	<span class="card-title title-font">Scrapy project</span>
</div>



<style>
	.card {
		position: relative;
		width: 100%;
		height: auto;
		display: flex;
		border-radius: 20px;
	}

	.card img {
		width: 100%;
		height: 100%;
		border-radius: 20px;
	}

	.card .card-title {
		width: 100%;
		height: 20%;
		position: absolute;
		bottom: 0;
		background-color: var(--black);
		color: var(--text-white);
		opacity: .8;
		border-radius: 0 0 20px 20px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
	}
</style>

